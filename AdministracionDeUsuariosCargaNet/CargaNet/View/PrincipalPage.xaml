<Window x:Class="CargaNet.View.PrincipalPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CargaNet.View"
             mc:Ignorable="d"            
             Title="Gestión de App Movile"
             WindowStartupLocation="CenterScreen"
             WindowState="Maximized"
            Icon="/View/img/rick_and_morty_d.ico" 
            d:DesignHeight="450" d:DesignWidth="800">
    <Grid >
       
        <TabControl>
            <TabItem Header="Login">
                <local:LoginView/>
            </TabItem>
            <TabItem Header="Gestionar Recargas">
                <local:RecargasView/>
            </TabItem>
            <TabItem Header="Gestionar Usuarios">
                <local:UsuarioView/>
            </TabItem>
            <TabItem Header="Gestionar Psr">
                <local:PsrView/>
            </TabItem>
            
        </TabControl>
       
    </Grid>
</Window>
